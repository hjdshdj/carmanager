<?xml version="1.0" encoding="utf-8" standalone="no"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yu.car_android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    <!-- 权限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>
    <uses-permission android:name="android.permission.READ_PHONE_STATE" >
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- 友盟 -->
        <meta-data
            android:name="UMENG_APPKEY"
            android:value="552b3727fd98c554bb000f84" />
        <meta-data
            android:name="UMENG_CHANNEL"
            android:value="1030" />
        <meta-data
            android:name="CHANNEL_IC"
            android:value="0" />

        <activity
            android:name="com.yu.car_android.ui.WelcomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.yu.car_android.ui.FrameActivity"
            android:launchMode="singleTask"
            android:theme="@style/car_theme"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.yu.car_android.ui.home.HomeActivity"
            android:theme="@style/car_theme" />
        <activity
            android:name="com.yu.car_android.ui.server.ServerActivity"
            android:theme="@style/car_theme" />
        <activity
            android:name="com.yu.car_android.ui.info.InforActicity"
            android:theme="@style/car_theme" />
        <activity
            android:name="com.yu.car_android.ui.account.AccountActivity"
            android:theme="@style/car_theme" />
        <activity
            android:name="com.yu.car_android.ui.fragment.FragmentHomeActivity"
            android:launchMode="singleTask"
            android:theme="@style/car_theme" />
        <activity
            android:name="com.yu.car_android.ui.slidingmenu.SlidingpaneLayoutActivity"
            android:launchMode="singleTask"
            android:theme="@style/car_theme" />
        <activity
            android:name="com.yu.car_android.ui.slidingmenu.SlidingMenuActivity"
            android:launchMode="singleTask"
            android:theme="@style/car_theme" />
    </application>

    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.SET_DEBUG_APP" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

</manifest>